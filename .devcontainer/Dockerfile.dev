# Use the NVIDIA CUDA base image with cuDNN and Ubuntu 22.04
FROM nvidia/cuda:12.6.2-cudnn-devel-ubuntu22.04

# Set the working directory
WORKDIR /app

# Set non-interactive mode to avoid prompts during apt-get
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies and Python 3.12 from deadsnakes PPA (if available)
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential libffi-dev git curl \
    software-properties-common && \
    add-apt-repository ppa:deadsnakes/ppa && \
    apt-get update && \
    apt-get install -y \
    python3.12 python3.12-dev python3.12-distutils python3-pip && \
    rm -rf /var/lib/apt/lists/*

# Create a symlink to ensure python3 points to Python 3.12
RUN ln -s /usr/bin/python3.12 /usr/bin/python

# Install CUDA Toolkit (which includes CUPTI)
RUN apt-get update && \
    apt-get install -y cuda-toolkit-12-0 gcc && \
    rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3.12 - && \
    ls -la /root/.local/bin

# Add Poetry to PATH manually
ENV PATH="${PATH}:/root/.local/bin"

# Copy poetry files and install dependencies
COPY pyproject.toml /app/
RUN poetry env use /usr/bin/python3.12
RUN poetry config virtualenvs.create false \
    && poetry install --no-root

# Copy the rest of the application
COPY . /app
